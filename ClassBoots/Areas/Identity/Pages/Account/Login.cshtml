@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-6">
        <section>
            Login via Social-networks
            <div>
                <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <div style="margin: 20px 50px 20px 50px;">
                        <button id="loginbtn" type="submit" style="margin:0px 10px 0px 0px;" class="btn btn-default bg-white" name="provider" value="Google" title="Log in using your Google account"><img src="https://png.icons8.com/color/1600/google-logo.png" style="height:50px; width:50px;" id="loginbtn" name="provider" value="Google" title="Log in using your Google account" /></button>
                        <button id="loginbtn" type="submit" class="btn btn-default bg-white" name="provider" value="Google" title="Log in using your Google account"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/c2/F_icon.svg/2000px-F_icon.svg.png" style="height:50px; width:50px;" id="loginbtn" name="provider" value="Google" title="Log in using your Google account" /></button>
                    </div>
                </form>
            </div>
            <hr />
            Login via Local-user
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email (ex@gmail.com)" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default bg-white btn-md">Login</button>
                </div>
                <a asp-page="./ForgotPassword">Forgot your password?</a>
            </form>
        </section>
    </div>


    <div class="col-6">
        <section>
            Not registered yet? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register now for free.</a>
        </section>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
