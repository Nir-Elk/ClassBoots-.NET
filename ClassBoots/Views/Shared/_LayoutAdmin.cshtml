<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/images/favicon.png">
    <title>@ViewData["Title"] - ClassBoots</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- chartist CSS -->
    <link href="~/assets/plugins/chartist-js/dist/chartist.min.css" rel="stylesheet">
    <link href="~/assets/plugins/chartist-js/dist/chartist-init.css" rel="stylesheet">
    <link href="~/assets/plugins/chartist-plugin-tooltip-master/dist/chartist-plugin-tooltip.css" rel="stylesheet">
    <!--This page css - Morris CSS -->
    <link href="~/assets/plugins/c3-master/c3.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/style.css" rel="stylesheet">
    <!-- You can change the theme colors from here -->
    <link href="~/css/colors/blue.css" id="theme" rel="stylesheet">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    </head>

<body class="fix-header fix-sidebar">
    <div class="preloader">

        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>
    <!-- ============================================================== -->
    <!-- Left Sidebar - style you can find in sidebar.scss  -->
    <!-- ============================================================== -->
    <aside class="left-sidebar" style="padding-top:unset;">
        <a href="/" alt="ClassBoots Home Page"> <div class="logo-classboots light-logo"></div></a>

        <!-- Sidebar scroll-->
        <div class="scroll-sidebar">
            <!-- Sidebar navigation-->
            <nav class="sidebar-nav">
                <ul id="sidebarnav">
                    <li>
                        <a class="waves-effect waves-dark" asp-area="" asp-controller="Administrator" asp-action="Index" aria-expanded="false"><i class="mdi mdi-home"></i><span class="hide-menu">Index </span></a>
                    </li>
                    <li>
                        <a class="waves-effect waves-dark" asp-area="" asp-controller="Administrator" asp-action="Statistics" aria-expanded="false"><i class="mdi mdi-chart-bar"></i><span class="hide-menu">Statistics</span></a>
                    </li>
                    <li>
                        <a class="waves-effect waves-dark" asp-area="" asp-controller="Administrator" asp-action="Users" aria-expanded="false"><i class="mdi mdi-account-multiple"></i><span class="hide-menu">User</span></a>
                    </li>
                    <li>
                        <a class="waves-effect waves-dark" asp-area="" asp-controller="Lecturer" asp-action="Index" aria-expanded="false"><i class="mdi mdi-glasses"></i><span class="hide-menu">Lecturers</span></a>
                    </li>
                    <li>
                        <a class="waves-effect waves-dark" asp-area="" asp-controller="Institution" asp-action="Index" aria-expanded="false"><i class="mdi mdi-school"></i><span class="hide-menu">Institutions</span></a>
                    </li>
                    <li>
                        <a class="waves-effect waves-dark" asp-area="" asp-controller="School" asp-action="Index" aria-expanded="false"><i class="mdi mdi-domain"></i><span class="hide-menu">Schools</span></a>
                    </li>
                    <li>
                        <a class="waves-effect waves-dark" asp-area="" asp-controller="Subject" asp-action="Index" aria-expanded="false"><i class="mdi mdi-file-multiple"></i><span class="hide-menu">Subjects</span></a>
                    </li>
                    <li>
                        <a class="waves-effect waves-dark" asp-area="" asp-controller="Lecture" asp-action="Index" aria-expanded="false"><i class="mdi mdi-format-list-numbers"></i><span class="hide-menu">Lectures</span></a>
                    </li>
                    <li>
                        <a class="waves-effect waves-dark" asp-area="" asp-controller="Video" asp-action="Index" aria-expanded="false"><i class="mdi mdi-video"></i><span class="hide-menu">Videos</span></a>
                    </li>
                </ul>
                <div class="text-center m-t-30">
                    <a a asp-area="" asp-controller="Home" asp-action="Index" class="btn waves-effect waves-light btn-warning hidden-md-down">FRONTEND</a>
                </div>
            </nav>
            <!-- End Sidebar navigation -->
        </div>
        <!-- End Sidebar scroll-->

    </aside>
    <!-- ============================================================== -->
    <!-- End Left Sidebar - style you can find in sidebar.scss  -->
    <!-- ============================================================== -->

    <div class="page-wrapper">

        <div class="container-fluid">
            <!-- ============================================================== --
            <div class="row page-titles">
                <partial name="_CookieConsentPartial" />
                <div id="path"></div>
                <div id="results">You can start search</div>
            </div>
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

	<footer class="footer">
		<div class="home-circle">
			<div class="class-boots-home-icon"></div>
		</div>
		<br />
		@ViewData["Title"]
	</footer>

    <environment include="Development">
        <script src="~/assets/plugins/jquery/jquery.js"></script>
        <script src="~/assets/plugins/bootstrap/js/tether.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/jquery.slimscroll.js"></script>
        <script src="~/js/waves.js"></script>
        <script src="~/js/sidebarmenu.js"></script>
        <script src="~/assets/plugins/sticky-kit-master/dist/sticky-kit.min.js"></script>
        <script src="~/js/custom.min.js"></script>
        <script src="~/js/jquery.session.js"></script>


    </environment>
    <environment exclude="Development">
        <script src="~/assets/plugins/jquery/jquery.js"></script>
        <script src="~/assets/plugins/bootstrap/js/tether.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/jquery.slimscroll.js"></script>
        <script src="~/js/waves.js"></script>
        <script src="~/js/sidebarmenu.js"></script>
        <script src="~/assets/plugins/sticky-kit-master/dist/sticky-kit.min.js"></script>
        <script src="~/js/custom.min.js"></script>
        <script src="~/js/jquery.session.js"></script>

    </environment>



    @RenderSection("Scripts", required: false)

</body>
</html>
